@model ContactModel;
@{
    ViewBag.Title = "Contact";
}

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        var sendEmail = function () {

            $.ajax{
                type: 'post',
                    url: '~/Home/Contact',
                        data: { text: request.term },
                success: function (data) {
                    alert("Email Sent");

                }

            }

        }
    </script>

}

<div class="container-fluid">
    @using (Html.BeginForm("Contact", "Home"))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <h2>Please fill out the contact form to reach me</h2>
        </div>
        <br />

        <div class="row justify-content-center">
            <div class="form-group">
                <div class="col-md-2 text-md-right">
                    @Html.LabelFor(m => m.Email, new { @class = " col-2 control-label text-md-right" })
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "txtEmail" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
                <br />
            </div>
        </div>
        <br />
        <div class="row justify-content-center">
            <div class="form-group">
                <div class="col-md-2 text-md-right">
                    @Html.LabelFor(m => m.Subject, new { @class = " col-2 control-label text-md-right" })
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @id = "txtSubject" })
                    @Html.ValidationMessageFor(m => m.Subject)
                </div>
            </div>
        </div>
        <br />
        <div class="row justify-content-center">
            <div class="form-group">
                <div class="col-md-2 text-md-right">
                    @Html.LabelFor(m => m.Message, new { @class = " col-2 control-label text-md-right" })
                </div>
                <div class="col-md-4">
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @id = "txtMessage", @rows = 4 })
                    @Html.ValidationMessageFor(m => m.Message)
                </div>
            </div>
        </div>
        <br />
        @*<div class="form-group">
                @Html.LabelFor(m => m.Upload, new { @class = "col-2 control-label" })
                <div class="col-10">
                    <input type="file" name="upload" />
                </div>
            </div>*@
        <div class="row justify-content-center">
            <div class="form-group">
                <div class="col-md-2 text-md-right">
                    @Html.LabelFor(m => m.GetUserPass, new { @class = " col-2 control-label text-md-right" })
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.GetUserPass, new { @class = "form-control password", @id = "txtEmailPass" })
                    @Html.ValidationMessageFor(m => m.GetUserPass)
                </div>
            </div>
            <br />
        </div>
        <div class="row">
            <div class="col-md-1 offset-2">
                <div class="form-group">
                    <input type="submit" value="Send" class="bt1" />
                </div>
            </div>
        </div>

    }
</div>
